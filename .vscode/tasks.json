{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build & Run SDL2 Game",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-I/opt/homebrew/opt/sdl2/include",
                "-L/opt/homebrew/opt/sdl2/lib",
                "-lSDL2",
                "${file}",
                "-o",
                "${fileDirname}/joc",
                "&&",
                "${fileDirname}/joc"
            ],
            "group": "build",
            "detail": "Builds and runs an SDL2 C++ program on macOS."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}