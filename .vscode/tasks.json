{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-I/opt/homebrew/opt/sdl2/include",
                "-L/opt/homebrew/opt/sdl2/lib",
                "-lSDL2",
                "${fileDirname}/*.cpp",
                "-o",
                "${fileDirname}/joc",
                "&&",
                "${fileDirname}/joc"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Builds C++ file with SDL2 support"
        }
    ]
}
